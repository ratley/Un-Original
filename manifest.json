{
  "name": "No Netflix Originals",
  "description": "Removes the massive pane of Netflix Originals from the Netflix browse page.",
  "version": "2.4",
  "browser_action": {
  "default_icon": "icon.png"
},

  "icons": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png" },

  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
      {
        "matches": ["http://www.netflix.com/*","https://www.netflix.com/*","https://www.netflix.com/ManageProfiles"],
        "run_at": "document_end",
        "js": ["jquery.min.js","background.js"],
        "all_frames": true
      }
    ],
  "manifest_version": 2
}
